# Copy this file to .env and set the values below.
# Required: JWT_SECRET. Others have defaults.

# Required – used to sign and verify JWT tokens
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Optional – MongoDB connection string
# Local: mongodb://localhost:27017/taskmanager
# Docker: mongodb://mongo:27017/taskmanager
MONGODB_URI=mongodb://localhost:27017/taskmanager

# Optional – server port (default 5000; Docker Compose often uses 5002)
PORT=5002

# Optional – CORS and Socket.IO allowed origin
FRONTEND_URL=http://localhost:3000

# Optional – Web Push (VAPID). Leave empty to disable push notifications.
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@example.com

# Optional – task reminder scheduler
# TASK_REMINDER_LEAD_MINUTES=60
# TASK_REMINDER_POLL_MS=60000
